#set encoding=UTF-8
# Fixing the bug eith home and end keys
# link: https://unix.stackexchange.com/a/225250
#export TERMINFO=~/.terminfo
export EDITOR=vim

# Enabling Portage completions and Gentoo prompt for zsh
autoload -U compinit promptinit
compinit
promptinit; prompt gentoo

# export variables
export ZSH="$HOME/.oh-my-zsh"
export TERM=screen-256color
export NVM_DIR="$HOME/.nvm"
export XDG_DATA_DIRS="$XDG_DATA_DIRS:$HOME/.local/share/flatpak/exports/share"
export XDG_DATA_DIRS="$XDG_DATA_DIRS:/var/lib/flatpak/exports/share"
export PATH="$PATH:$HOME/.dotnet/tools"
export PATH="$PATH:$HOME/.dotnet"
export PATH="$PATH:$(yarn global bin)"
export PATH="$PATH:$HOME/.gem/ruby/2.6.0/bin"

# theme
ZSH_THEME="gentoo"
# ZSH_THEME="robbyrussell"

DISABLE_AUTO_UPDATE="false"
DISABLE_AUTO_TITLE="true"
ZSH_DISABLE_COMPFIX="true"

plugins=(archlinux zsh-autosuggestions)
source $ZSH/oh-my-zsh.sh

# Custom aliases
alias zshconf="vim ~/.zshrc"
alias ohmyzsh="vim ~/.oh-my-zsh"
alias info="screenfetch"
alias "c=xclip"
alias "v=xclip -o"
alias sudo="sudo -sE"
alias em="sudo emerge"
alias emerge="sudo emerge"
alias tmux="TERM='screen-256color' tmux"
alias reboot="sudo reboot"
alias poweroff="sudo poweroff"

# node version manager
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

# auto-load tmux
# [ -z "$TMUX"  ] && { tmux attach || exec tmux new-session;}

