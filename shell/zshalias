#! /bin/zsh
alias vim="sudo nvim"
alias vimdiff="nvim -d"
alias gvim="sudo neovide"
alias sudo="sudo -sE"
alias cat="bat"
alias em="sudo -sE emerge"
alias emerge="sudo -sE emerge"
alias remote="xfreerdp /timeout:36000 /d:lmcorp /dynamic-resolution /log-level:FATAL /cert:ignore +home-drive +clipboard"
alias say="cowsay -r"
alias open="xdg-open"
alias fontlist="fc-list -f '%{family}\n'"
alias notes="zet"
alias f="fzf"
alias files="vifm"
alias ff="vifm"
alias calendar="cal --color='always'"
alias t="task"
alias ta="task add"
alias xclip="xclip -selection clipboard"
alias ip="ip -c=always"
