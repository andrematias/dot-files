# vim:filetype=cfg

[memory]
command=~/.config/i3blocks/blocks/memory.sh
interval=5

[cpu]
command=~/.config/i3blocks/blocks/cpu.sh
interval=5

[btc]
command=~/.config/i3blocks/blocks/crypto.py
label=BTC $
interval=3600

[xrp]
command=~/.config/i3blocks/blocks/crypto.py XRPUSDT
interval=3600
label=XRP $

[datetime]
command=date '+%Y-%m-%d %H:%M:%S'
interval=1

